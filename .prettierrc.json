{
	"printWidth": 80,
	"trailingComma": "all",
	"useTabs": true,
	"semi": false,
	"tabWidth": 4,
	"singleQuote": false,
	"overrides": [
		{
			"files": "*.{css,scss}",
			"options": {
				"singleQuote": false
			}
		}
	],
	"importOrder": [
		"app/**",
		"pages/*/**",
		"features/*/**",
		"entities/*/**",
		"shared/*/*/**",
		"../**/app",
		"../**/pages",
		"../**/features",
		"../**/entities",
		"../**/shared"
	]
}
